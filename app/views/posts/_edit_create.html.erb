<%= form_for @post, class: "form-inline" do |x| %>
<div class="form-group">
  <label for="exampleInputName2">Introduzca el nombre del nuevo post:</label>
  <%= x.text_field :title,placeholder: "Mi nuevo post", class: "form-control" %>
</div>
<div class="form-group">
  <label for="exampleInputEmail2">Email</label>
  <%= x.text_area :description, placeholder: "Este es mi nuevo post aprendiendo rails", class: "form-control" %>
</div>
<%= x.submit "Ok", class: "btn btn-default"%>
<%end%>
