<div class="panel panel-default"> <div class="panel-heading"> <h3 class="panel-title"><%= @post.title %><small><b> Hecho por: </b><i><%= @post.user.name.downcase if @post.user %></i></small> </h3> </div> <div class="panel-body"><%= @post.description %> </div> </div>
<div>
<h3>Comentarios</h3>
<% @comments.each do |com|%>
<% if com.description != nil %>
<div class="tab-pane active" id="comments-logout">
               <ul class="media-list">
                 <li class="media">
                   <a class="pull-left" href="#">
                  <%= image_tag("ola.jpg",width: 60, height: 60,class: "media-object img-circle") %>
                </a>
                   <div class="media-body">
                     <div class="well well-sm">
                         <h4 class="media-heading text-uppercase reviews"><%= com.user.name if com.user  %> </h4>

                         <p class="media-comment">
                           <%= com.description  %>
                         </p>
                         <%= link_to editcom_path(@post,com), class: "btn btn-default"  do %>
                            <span class="glyphicon glyphicon-edit" aria-hidden="true"></span> Editar Comentario
                        <%end%>
                         <%= link_to com, method: :delete, class: "btn btn-default"  do %>
                            <span class="glyphicon glyphicon-edit" aria-hidden="true"></span> Borrar Comentario
                        <%end%>

                     </div>
                    </div>
<%end%>
<%end%>
<%= render "comments/formcom" %>
</div>

    <%= link_to :new_post, class: "btn btn-default"  do %>
        <span class="glyphicon glyphicon-edit" aria-hidden="true"></span> Nuevo post
    <%end%>
    <%= link_to "/#{current_user.username}/posts", class: "btn btn-default" do %>
        <span class="glyphicon glyphicon-circle-arrow-left" aria-hidden="true"></span> Regresar
    <%end%>
    <%= link_to edit_post_path(@post), class: "btn btn-default" do %>
            <span class=" glyphicon glyphicon-pencil" aria-hidden="true"></span> Editar
    <%end%>
