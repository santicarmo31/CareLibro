<% if @user.errors.any? %>
<div class="alert alert-danger alert-dismissible" role="alert">
<button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
<strong>Existen algunos errores:</strong> No se pudo guardar el registro, corrige los errores:
<ul>
<% @user.errors.each do | key, msn | %>
<li><%= msn %></li>
<% end %>
</ul>
</div>
<% end %>

<br>
<div class="panel panel-danger"></div>
<div class="container">
   <div class='row'>
       <div class='col-md-4'></div>
       <div class='col-md-4'>
         <div class='col-md-12 form-group'>
         <h1>Registro</h1>
         <hr class="featurette-divider"></hr>
         <p>Por favor llene los campos completamente y de manera adecuada</p>
         <hr class="featurette-divider"></hr>
           <div class="progress-bar progress-bar-striped active" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: 100%;">
         Carelibro
         </div><br>
         <hr class="featurette-divider"></hr></div>
         <script src='https://js.stripe.com/v2/' type='text/javascript'></script>
          <%= form_for @user do |x| %>
           <div class='form-row'>
             <div class='col-xs-12 form-group required'>
               <label class='control-label'>Nombre</label>
               <%= x.text_field :name,class: "form-control" %>
             </div>
           </div>
           <div class='form-row'>
             <div class='col-xs-12 form-group card required'>
               <label class='control-label'>Contraseña</label>
               <%= x.password_field :password,class: "form-control card-number" %>
             </div>
             <div class='col-xs-12 form-group card required'>
               <label class='control-label'>Confirmar contraseña</label>
               <%= x.password_field :password_confirmation,class: "form-control card-number" %>
             </div>
           </div>
            <div class='form-row'>
             <div class='col-xs-12 form-group card required'>
               <label class='control-label'>Username</label>
               <%= x.text_field :username,class: "form-control card-number" %>
             </div>
           </div>
           <div class='form-row'>
            <div class='col-xs-12 form-group card required'>
              <label class='control-label'>Email</label>
              <%= x.text_field :email,class: "form-control card-number" %>
            </div>
          </div>


           <div class='form-row'>
             <div class='col-md-12 form-group'>
                        <hr class="featurette-divider"></hr>
                            <%= x.submit "Registrar",class: "form-control btn btn-primary submit-button"%>

             </div>
           </div>
         <%end%>
       </div>

       <div class='col-md-4'></div>
   </div>
</div>
</div>

<br>
