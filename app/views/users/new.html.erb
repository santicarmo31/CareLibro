<% if @user.errors.any? %>
<div class="alert alert-danger alert-dismissible" role="alert">
<button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
<strong>Existen algunos errores:</strong> No se pudo guardar el registro, corrige los errores:
<ul>
<% @user.errors.each do | key, msn | %>
<li><%= msn %></li>
<% end %>
</ul>
</div>
<% end %>

<h1>Registro</h1>
<div>
<%= form_for @user do |x| %>
<label>Introduzca su nombre:</label>
<%= x.text_field :name %>
<br>
<label>Introduzca su contrase√±a:</label>
<%= x.password_field :password %>
<br>
<label>Introduzca su username:</label>
<%= x.text_field :username %>
<br>
<label>Introduzca su email:</label>
<%= x.text_field :email %>
<br>
<%= x.submit "Registrar"%>
<%end%>


</div>
